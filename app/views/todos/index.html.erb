<div class="container">
  <div>
    <h1 class="text-center"> Welcome To Todo: <span>A place where stuff gets done!</span> </h1>
  </div>
  <div id="todo list">
    <% @todos.each do |todo| %>
    <div class="todo well simple-border" data-id=<%= todo.id %>>
      <div class="row">
        <div class="col-xs-1">
          <div class="box" id="<%=todo.id %>">
            <% if todo.completed %>
            <i class="fa fa-check fa-4x"></i>
            <% end %>
          </div>
        </div>
        <div class="col-xs-2"></div>
        <div class="col-xs-6">
          <p class='text-center'> <%= todo.body %> </p>
        </div>
        <div class="col-xs-3"></div>
      </div>
      <div class="row">
        <div class="col-xs-9"></div>
        <div class="col-xs-2">
        </div>
        <div class="col-xs-1 debugger">
        <%= button_to 'Delete', {action: 'destroy', id: todo.id}, method: :delete, class: "btn btn-danger center-block"%>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <%= render 'new'%>
    <i class="fa fa-trash fa-4x"></i>
</div>

